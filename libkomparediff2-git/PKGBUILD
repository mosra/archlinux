# Contributor: mosra <mosra@centrum.cz>

pkgname=libkomparediff2-git
pkgver=20140907
pkgrel=1
pkgdesc="Library to compare files and strings - KF5, Git build"
url='https://projects.kde.org/projects/kde/kdesdk/libkomparediff2'
arch=('i686' 'x86_64')
license=('GPL')
groups=('kde')
depends=('kcoreaddons' 'kcodecs' 'kconfig' 'kxmlgui' 'ki18n' 'kio' 'kparts')
makedepends=('cmake' 'git')

_gitroot="git://anongit.kde.org/libkomparediff2"
_gitname="libkomparediff2"

pkgver() {
    date +%Y%m%d
}

build() {
    cd "$srcdir"
    msg "Connecting to Git server..."

    if [ -d $_gitname ] ; then
        cd $_gitname

        git pull origin
        msg "The local files are updated."
    else
        git clone $_gitroot $_gitname
        cd $_gitname
        git checkout frameworks
    fi

    msg "Git checkout done."
    msg "Starting make..."

    mkdir -p "$srcdir/build"
    cd "$srcdir/build"

    cmake ../$_gitname \
        -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
        -DLIB_INSTALL_DIR=lib \
        -DCMAKE_BUILD_TYPE=Release

    make
}

package() {
    cd "$srcdir/build"

    make DESTDIR="$pkgdir" install
}
