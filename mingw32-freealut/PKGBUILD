# Contributor: mosra <mosra@centrum.cz>

pkgname=mingw32-freealut
_pkgname=freealut
pkgver=1.1.0
pkgrel=1
pkgdesc="OpenAL Utility Toolkit (ALUT) (mingw32)"
arch=('i686' 'x86_64')
url="http://www.openal.org"
license=("LGPL")
makedepends=('mingw32-gcc')
depends=('mingw32-openal')
options=('!libtool' !buildflags)
source=(http://connect.creativelabs.com/openal/Downloads/ALUT/$_pkgname-$pkgver-bin.zip)
md5sums=('4b3bbcab56b47f7bbf75be89d593c1bd')

build() {
  cd $srcdir/$_pkgname-$pkgver-bin

  install -m755 -D lib/alut.dll $pkgdir/usr/i486-mingw32/lib/alut.dll
  install -m644 -D include/AL/alut.h $pkgdir/usr/i486-mingw32/include/AL/alut.h
}
