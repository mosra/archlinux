# Contributor: mosra <mosra@centrum.cz>

pkgname=kdevelop-pg-qt-git
pkgver=20121027
pkgrel=1
pkgdesc="KDevelop Parser Generator, a LL(1) parser generator used by KDevelop language plugins - Git version"
arch=('i686' 'x86_64')
url="http://www.kdevelop.org"
license=('GPL')
depends=('kdelibs')
makedepends=('cmake' 'automoc4' 'git')
conflicts=('kdevelop-pg-qt')

_gitroot="git://anongit.kde.org/kdevelop-pg-qt"
_gitname="kdevelop-pg-qt"

build() {
    cd "$srcdir"
    msg "Connecting to Git server..."

    if [ -d $_gitname ] ; then
        cd $_gitname && git pull origin
        msg "The local files are updated."
    else
        git clone $_gitroot $_gitname
    fi

    msg "Git checkout done."
    msg "Starting make..."

    mkdir -p "$srcdir/build"
    cd "$srcdir/build"

    cmake ../${_gitname} \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release

    make
}

package() {
    cd "$srcdir/build"

    make DESTDIR="${pkgdir}" install
}
