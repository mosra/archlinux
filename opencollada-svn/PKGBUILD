# Maintainer: Liganic <liganic-aur@gmx.net>
pkgname=opencollada-svn
pkgver=868
pkgrel=1
pkgdesc="Stream based reader and writer library for COLLADA files"
arch=(x86_64)
url="https://code.google.com/p/opencollada/"
license=('GPL')
depends=(libxml2)
makedepends=('subversion' 'ruby' 'cmake')
provides=(opencollada)
conflicts=(opencollada)
options=(!libtool !strip)
source=('memcpy.patch')
md5sums=('939b1ab8683c5655fb71ea7c37d65734')

_svntrunk=http://opencollada.googlecode.com/svn/trunk/
_svnmod=opencollada

build() {
  cd "$srcdir"
  msg "Connecting to SVN server...."

  if [[ -d "$_svnmod/.svn" ]]; then
    cd "$_svnmod"

    svn revert common/libBuffer/include/CommonBuffer.h

    svn up -r "$pkgver"
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting build..."

  patch -p0 < "$srcdir/memcpy.patch"

  mkdir -p "$srcdir/build"
  cd "$srcdir/build"
  cmake ../$_svnmod \
    -DCMAKE_INSTALL_PREFIX=/usr
  make

#  cd scripts/
#  chmod +x unixbuild.sh
#  ./unixbuild.sh $pkgdir/usr/
}

package() {
  cd "$srcdir/build"
  make DESTDIR="$pkgdir" install
}

