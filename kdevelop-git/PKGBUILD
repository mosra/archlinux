pkgname=kdevelop-git
pkgver=20110604
pkgrel=1
pkgdesc="A C/C++ development environment for KDE - GIT build"
arch=('i686' 'x86_64')
url="http://www.kdevelop.org/"
license=('GPL')
depends=('kdevplatform-git' 'kdebase-workspace')
makedepends=('cmake' 'automoc4' 'perl' 'git')
provides=('kdevelop')
conflicts=('kdevelop')
source=()
md5sums=()

_gitroot="git://anongit.kde.org/kdevelop"
_gitname="kdevelop"

build() {
    cd "$srcdir"
    msg "Connecting to GIT server...."

    if [ -d $_gitname ] ; then
        cd $_gitname

        # Change remote url to anongit
        if [ -z "$(git remote -v | grep anongit)" ] ; then
            git remote set-url origin ${_gitroot}
        fi

        git pull origin
        msg "The local files are updated."
    else
        git clone $_gitroot $_gitname
    fi

    msg "GIT checkout done or server timeout"
    msg "Starting make..."

    mkdir -p "$srcdir/build"
    cd "$srcdir/build"

    cmake ../${_gitname} \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=RELWITHDEBINFO

    make
}

package() {
    cd "$srcdir/build"

    make DESTDIR="${pkgdir}" install
}
