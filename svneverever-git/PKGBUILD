# Contributor: mosra <mosra@centrum.cz>
pkgname=svneverever-git
pkgver=20100508
pkgrel=1
pkgdesc="Collects path entries across SVN history."
arch=('any')
url="http://blog.hartwork.org/?p=763"
license=('GPLv3')
groups=()
depends=('python' 'pysvn')
makedepends=('git')
source=()
md5sums=()

_gitroot="git://git.goodpoint.de/svneverever.git"
_gitname="svneverever"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cd "$srcdir/$_gitname"

  install -m755 -D svneverever "$pkgdir/usr/bin/svneverever"
}
