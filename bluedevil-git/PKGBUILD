# Contributor: mosra <mosra@centrum.cz>

pkgname=bluedevil-git
pkgver=20130517
pkgrel=1
pkgdesc='KDE bluetooth framework - Git version'
arch=('i686' 'x86_64')
url="http://gitweb.kde.org/bluedevil.git"
license=('GPL')
depends=('kdebase-workspace' 'libbluedevil' 'obex-data-server' 'obexd-client')
makedepends=('cmake' 'automoc4' 'git')
provides=(bluedevil)
conflicts=(bluedevil)
source=()
md5sums=()

_gitroot="git://anongit.kde.org/bluedevil.git"
_gitname="bluedevil"

pkgver() {
    date +%Y%m%d
}

build(){
    cd "$srcdir"
    msg "Connecting to Git server..."

    if [ -d $_gitname ] ; then
        cd $_gitname && git pull origin
        msg "The local files are updated."
    else
        git clone $_gitroot $_gitname
    fi

    msg "Git checkout done."
    msg "Starting make..."

    mkdir -p "$srcdir/build"
    cd "$srcdir/build"

    cmake ../${_gitname} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_SKIP_RPATH=ON \
        -DCMAKE_INSTALL_PREFIX=/usr
    make
}

package() {
    cd "${srcdir}/build"
    make DESTDIR=${pkgdir} install
}
